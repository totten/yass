        try {
            $this->filter->toGlobal($activities, $this->local);
            $this->fail('Expected exception');
        } catch (Exception $e) {
            $this->pass();
        }
    }
    */
    function testToLocalException() {
        $contacts = array(
            new YASS_Entity('asdf', 'civicrm_contact', array(
                '#custom' => array(
                    'whiz' => 'z'
                ),
            )),
        );

        try {
            $this->filter->toLocal($contacts, $this->local);
            $this->fail('Expected exception');
        } catch (Exception $e) {
            $this->pass();
        }
    }
}
